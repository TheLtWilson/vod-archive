---
import Layout from '@/layouts/Layout.astro'
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import SearchClient from '@/components/vod-vault/SearchClient'

// Pull initial query from URL during prerender (will be empty normally) â€“ Astro passes no request for static
const initialQuery = ''
---

<Layout title="Search" description="Search archived Twitch streams by title, game, or date">
  <main class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">
    <div class="py-4">
      <Breadcrumbs items={[{ label: 'Search', icon: 'lucide:search' }]} />
    </div>
    <SearchClient initialQuery={initialQuery} client:load />
  </main>
</Layout>
